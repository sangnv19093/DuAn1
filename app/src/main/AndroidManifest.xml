    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="Happy Food"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nhom2_DuAn1_HappyFoo"
        tools:targetApi="31">

        <activity android:name=".activity.DangNhapActivity"
            android:exported="false"/>
        <activity android:name=".activity.DangKyTaiKhoanActivity"
            android:exported="false"/>
        <activity
            android:name=".activity.ChiTietSanPhamActivity"
            android:exported="false" />
        <activity
            android:name=".activity.DiaChiNhanHangActivity"
            android:exported="false" />
        <activity
            android:name=".activity.XacNhanThanhToanActivity"
            android:exported="false" />
        <activity
            android:name=".activity.GioHangActivity"
            android:exported="false" />
        <activity
            android:name=".activity.PhuongThucThanhToanActivity"
            android:exported="false" />

        <!-- Remove the duplicate declaration of MainActivity -->
        <!-- Keep only one declaration with the launcher intent filter -->
        <activity
            android:name=".activity.MainActivity"
            android:exported="false"
            />
        <activity
            android:name=".activity.ChiTietNguoiDung"
            android:exported="false"
            />
        <activity
            android:name=".Main.WelCome"
            android:exported="true"
            tools:ignore="DuplicateActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
