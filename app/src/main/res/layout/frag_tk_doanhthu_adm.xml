<!-- frag_tk_doanhthu_adm.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_ngay_bat_dau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn ngày"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/btn_ngay_ket_thuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn ngày"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/btn_tinh_doanh_thu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tính Doanh Thu"
        android:layout_below="@id/btn_ngay_bat_dau"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txt_doanh_thu_thang_nay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doanh thu tháng này"
        android:layout_below="@id/btn_tinh_doanh_thu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
